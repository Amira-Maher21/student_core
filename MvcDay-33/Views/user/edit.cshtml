@model user
@{
    ViewBag.Title = "edit";
}

<h2>edit</h2>
<form method="post" enctype="multipart/form-data">
    @Html.HiddenFor(n=>n.Id)
    <div class="row">
        <div class="col-md-3"> @Html.LabelFor(n => n.Name) </div>
        <div class="col-md-5"> @Html.TextBoxFor(n => n.Name, new { @class = "form_control" }) </div>
        <div class="col-md-3"> @Html.ValidationMessageFor(n => n.Name)</div>
    </div>
    <div class="row">
        <div class="col-md-3"> @Html.LabelFor(n => n.Email) </div>
        <div class="col-md-5"> @Html.TextBoxFor(n => n.Email, new { @class = "form_control" }) </div>
        <div class="col-md-3"> @Html.ValidationMessageFor(n => n.Email)</div>
    </div>
    <div class="row">
        <div class="col-md-3"> @Html.LabelFor(n => n.age) </div>
        <div class="col-md-5"> @Html.TextBoxFor(n => n.age, new { @class = "form_control" }) </div>
        <div class="col-md-3"> @Html.ValidationMessageFor(n => n.age)</div>
    </div>
    <div class="row">
        <div class="col-md-3"> @Html.LabelFor(n => n.Address) </div>
        <div class="col-md-5"> @Html.TextBoxFor(n => n.Address, new { @class = "form_control" }) </div>
        <div class="col-md-3"> @Html.ValidationMessageFor(n => n.Address)</div>
    </div>
    <div class="row">
        <div class="col-md-3"> @Html.LabelFor(n => n.deptId) </div>
        <div class="col-md-5"> @Html.DropDownListFor(n => n.deptId, (SelectList)ViewBag.dept, new { @class = " btn btn-info form_control" }) </div>
        <div class="col-md-3"> @Html.ValidationMessageFor(n => n.deptId)</div>
    </div>
    <div class="row">
        <img src="~/attach/@Model.Photo" width="100" height="100"/>
     <input type="file" name="Photo"/>
         

    </div>
    <input type="submit" value="upbate" class="btn btn-info" />


</form>
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}